<!DOCTYPE html>
<html>
  <head>
    <title>Express</title>
    <link rel="stylesheet" href="../bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="users/client/styles/styles.css">

    <script type="text/javascript" src="../angular/angular.min.js"></script>
    <script type="text/javascript" src="../angular-ui-router/release/angular-ui-router.min.js"></script>
    <script type="text/javascript" src="users/client/controllers/users.client.controller.js"></script>
  </head>
  <body>
     <div class="page-header">
        <h1>Administrador de Tareas</h1>
    </div>
    <div >
        <div >
          <div class="col-xs-offset-2 col-xs-8 col-md-offset-4 col-md-4">
            <form name="userForm" class="signin" action="/login" method="post" novalidate autocomplete="off">
              <fieldset>
                <div class="form-group" show-errors>
                  <label for="username" >Username</label>
                  <input type="text" id="username" name="username" class="form-control" ng-model="usuario.user"  placeholder="Username" lowercase required>
                </div>
                <div class="form-group" show-errors>
                  <label for="password">Password</label>
                  <input type="password" id="password" name="password" class="form-control" ng-model="usuario.password" placeholder="Password" required>
                </div>
                <div class="text-center form-group">
                  <input type="submit" class="btn btn-primary" value="Sign In" />
                </div>
                <div class="text-center forgot-password">
                  <a ui-sref="register">Registrar Usuario</a>
                </div>
              </fieldset>
            </form>
          </div>
        </div>
    </div>
  </body>
</html>
